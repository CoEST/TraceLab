<ResourceDictionary
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Selectors="clr-namespace:TraceLab.UI.WPF.Selectors">
    
    <!-- Common node info resources -->
    
    <Selectors:ConfigPropertyTemplateSelector x:Key="ConfigPropertyTemplateSelector" />

    <Style x:Key="resizeThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border BorderThickness="0,1,0,0" BorderBrush="SteelBlue" Margin="0,3,0,0">
                        <Border BorderThickness="1" 
                                    BorderBrush="LightSteelBlue" 
                                    Background="LightSteelBlue" Margin="0,1,0,0" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="labelStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="10,1,5,1" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="componentInfoStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="5,1,5,1" />
    </Style>

</ResourceDictionary>